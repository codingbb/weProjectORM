{{> /layout/header}}


<style>
    /*이력서 작성*/
    table th {
        padding: 15px 20px;
    }

    .sub-menu {
        color: #222;
    }
</style>
<!--이력서 작성-->
<div class="resume-info-wrap  pt-80">

    <div class="container my-5 py-5 pt-80 d-flex">
        <div class="d-flex">
            <div class="col-3 px-5" style="text-align:center;">
                <div class="mb-3">
                    <div class="fs-4">이력서 작성</div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="relative mb-3">
                            <div>
                                <a href="/user/profileUpdateForm"
                                   onclick="window.open(this.href, '_blank', 'width=1200,height=900,toolbars=no,scrollbars=no, resizable=no'); return false;">
                                    <div class="user-img">
                                        <img src="/images/aboutme_img.jpg" class="rounded" alt="Cinque Terre"
                                             style="max-width: 80px;">

                                    </div>
                                </a>
                            </div>
                        </div>


                        <div>
                            <h6 class="card-subtitle text-muted">심유주님</h6>
                            <hr>
                            <ul class="nav flex-column nav-pills">
                                <li class="nav-item">
                                    <a class="nav-link sub-menu a p-1 mb-1" aria-current="page"
                                       href="/resume/resumeDetail">이력서</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link sub-menu a p-1 mb-1" href="/user/offer">지원 / 제안</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link sub-menu a p-1" href="/user/scrap">스크랩</a>
                                </li>
                                <hr>
                                <li class="nav-item">
                                    <a class="nav-link sub-menu a p-1 mb-1" href="/user/updateForm">정보수정</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  sub-menu a p-1" href="/">로그아웃</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>


            <!--이력서 작성 폼-->
            <div class="container ft-18">
                <form action="/resume/save" method="post" enctype="application/x-www-form-urlencoded">
                    <input type="hidden" name="id" value="{{sessionUser.id}}">
                    <div class="">
                        <!-- <div class="title">
                            <h2>이력서 작성</h2>
                        </div>
                        <hr> -->
                        <div class=" mb-3 ft-18">
                            <div class="card-header resume-info-hdtitle">기본 정보</div>
                            <hr>
                            <div class="card-body d-flex">
                                <div class="my-border resume-info-img col-3 mt-3" style="text-align: center;">
                                    <img class="" src="/images/aboutme_img.jpg" alt="" srcset=""
                                         style="width: 80%; height: auto;" id="photo">
                                </div>


                                <div class="resume-info-txt">

                                    {{#sessionUser}}
                                    <table>
                                        <tr>
                                            <th>이름</th>
                                            <td>{{myName}}</td>
                                        </tr>
                                        <tr>
                                            <th>생년월일</th>
                                            <td>{{birth}}</td>
                                        </tr>
                                        <tr>
                                            <th>연락처</th>
                                            <td>{{phone}}</td>
                                        </tr>
                                        <tr>
                                            <th>E-mail</th>
                                            <td>{{email}}</td>
                                        </tr>
                                        <tr>
                                            <th>주소</th>
                                            <td>{{address}}</td>
                                        </tr>
                                    {{/sessionUser}}

                                    <tr>
                                        <th>희망 근무 지역</th>
                                        <td>
                                            <select class="form-select" name="area" id="area">
                                                <!--<option selected>지역</option>  -->
                                                <option selected value="서울특별시">서울특별시</option>
                                                <option value="부산광역시">부산광역시</option>
                                                <option value="인천광역시">인천광역시</option>
                                                <option value="광주광역시">광주광역시</option>
                                                <option value="대전광역시">대전광역시</option>
                                            </select>
                                        </td>
                                    </tr>
                                </table>

                                </div>
                            </div>

                            <div class="card border-light mb-3">
                                <div class="card-header resume-info-hdtitle">학력 사항</div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <select class="form-select" name="edu" id="edu">
                                            <!--                                            <option selected>학력</option>-->
                                            <option selected>고졸</option>
                                            <option value="고졸">고졸</option>
                                            <option value="대졸">대졸</option>

                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="card border-light mb-3">
                                <div class="card-header resume-info-hdtitle">경력 사항</div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <select class="form-select" name="career" id="career">
                                            <!--                                            <option selected>경력별</option>-->
                                            <option selected value="신입">신입</option>
                                            <option value="미들(4~8년)">미들(4~8년)</option>
                                            <option value="시니어(10년 이상)">시니어(10년 이상)</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="card border-light mb-3">
                                <div class="card-header resume-info-hdtitle">보유 기술</div>
                                <div class="card-body">
                                    <div class="row my-3 my-border">

                                        <ul class="row technic">
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="Java">Java
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="JavaScrip">JavaScript
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="Spring">Spring
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="HTML">HTML
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="jquery">jquery
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="JSP">JSP
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="Vue.js">Vue.js
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="Oracle">Oracle
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="MysQL">MySQL
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="React">React
                                                </label>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="card border-light mb-3">
                                        <div class="card-header">자기소개서</div>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <textarea class="form-control" name="introduce" id="introduce"
                                                          rows="3">안녕</textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card border-light mb-3">
                                        <div class="card-header">링크</div>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <input type="text" name="portLink" id="portLink" class="form-control" value="naver.com">
                                            </div>
                                        </div>
                                    </div>


                                    <div class="card border-light mb-3">
                                        <div class="card-header">제목</div>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <div class="form-group">
                                                    <input type="text" name="title" id="title" class="form-control" value="하이얏">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card border-light mb-3">
                                        <div class="card-header">이력서 공개 여부</div>
                                        <div class="card-body">
                                            <fieldset class="form-group">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="isPublic"
                                                           id="isPublic"
                                                           value=1 checked="">
                                                    <label class="form-check-label" for="optionsRadios1">
                                                        공개
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="isPublic"
                                                           id="isPublic"
                                                           value="0">
                                                    <label class="form-check-label" for="optionsRadios2">
                                                        비공개
                                                    </label>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!--저장 버튼-->
                    <div class="rButton">
                        <div id="resume-remove" class="d-flex justify-content-center" style="align-items: center;">

                            <div class="">
                                <button type="submit" class="btn btn-mint w-100">이력서 저장</button>
                            </div>

                        </div>
                    </div>
                    <!--저장 버튼-->
                </form>

            </div>
            <!--이력서 작성 폼-->
            </form>
        </div>
    </div>
</div>



{{> /layout/footer}}