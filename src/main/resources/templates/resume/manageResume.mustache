{{> /layout/header}}
<div class="mx-auto pt-80" style="width:80%;">
    <div class="container my-5 py-5">
        <div class="row">
            <div class="col-3 px-5" style="text-align: center;">
                <div class="mb-3">
                    <div class="fs-4">이력서 관리</div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="relative mb-3">
                            <div>
                                <a href="/user/profileUpdateForm"
                                   onclick="window.open(this.href, '_blank', 'width=1200,height=900,toolbars=no,scrollbars=no, resizable=no'); return false;">
                                    <div class="user-img">
                                        <img src="/images/aboutme_img.jpg" class="rounded" alt="Cinque Terre"
                                             style="max-width: 80px;">

                                    </div>
                                </a>
                            </div>
                        </div>
                        <div>
                            <h6 class="card-subtitle text-muted">심유주님</h6>
                            <hr>
                            <ul class="nav flex-column nav-pills">
                                <li class="nav-item">
                                    <a href="/user/userHome" class="nav-link sub-menu a p-1 mb-1"
                                       aria-current="page">마이
                                        홈</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/resume/{{id}}/manageResume" class="nav-link sub-menu btn-mint a p-1 mb-1"
                                       aria-current="page" style="color:#fff;">이력서 관리</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/user/offer" class="nav-link sub-menu a p-1 mb-1">지원 / 제안</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/user/scrap" class="nav-link sub-menu a p-1">스크랩</a>
                                </li>
                                <hr>
                                <li class="nav-item">
                                    <a href="/user/updateForm" class="nav-link sub-menu a p-1 mb-1">정보수정</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  sub-menu a p-1" href="/">로그아웃</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--이력서 관리-->

            <div class="col-9 my-2 pe-5">
                <div class="d-flex justify-content-between " style="height: 3em;">
                    <div>
                        <h6><b>전체
                            <div class="badge count-color px-2 " style="font-weight: 900; font-size: 16px;">

                            </div>
                        </b></h6>
                    </div>
                    <div>
                        <button style="float: right;" type="button" class="btn btn-outline-mint mb-4"
                                onclick="location.href='/resume/writeResumeForm'">이력서
                            작성
                        </button>
                    </div>
                </div>

                {{#resumeList}}
                    <div class="card mb-4 mt-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-9 mt-2">
                                    <!--                                    <a href="/resume/resumeDetail"-->
                                    <!--                                       onclick="window.open(this.href, '_blank', 'width=1200,height=1080,toolbars=no,scrollbars=no, resizable=no'); return false;">-->

                                    <h5 class="card-title" style="text-align: left;">
                                        {{title}}
                                    </h5>
                                    <!--기술스킬-->
                                    <div class="d-flex">
                                        {{#skillList}}
                                        <div class="skill-wrap">
                                            <span class="badge bg-primary mr-5">{{name}}</span>
                                        </div>
                                            {{/skillList}}

                                    </div>
                                    <div class="m-2" style="float: left;">
                                        <h6 class="card-subtitle text-muted">
                                            {{edu}}
                                        </h6>
                                    </div>
                                    <div class="m-2" style="float: left;">
                                        <h6 class="card-subtitle text-muted">
                                            {{career}}
                                        </h6>
                                    </div>
                                    <div class="m-2" style="float: left;">
                                        <h6 class="card-subtitle text-muted">
                                            {{area}}
                                        </h6>
                                    </div>
                                    <!--                                    </a>-->
                                </div>

                                <div class="col-3">
                                    <div class="row">
                                        <input type="hidden" value="" name="" id="">
                                        <div class="mb-2" style="float: right;">
                                            <form action="/resume/updateResumeForm" method="get">
                                                <button type="submit" class="btn btn-mint" style="float: right;">
                                                    이력서 수정
                                                </button>
                                            </form>
                                        </div>
                                        <div class="mb-2" style="float: right;">
                                            <form action="/resume/delete" method="post">
                                                <button type="submit" class="btn btn-outline-mint mb-2"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#dModal" style="float: right;">이력서
                                                    삭제
                                                </button>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/resumeList}}

            </div>
        </div>

    </div>
</div>

{{> /layout/footer}}